{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 88,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.py",
      "options": {
        "singleQuote": false,
        "trailingComma": "none",
        "tabWidth": 4
      }
    }
  ]
}
